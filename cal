import java.util.Scanner;

public class SimpleCalculator {

    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        // Use a loop to allow multiple calculations
        boolean continueCalculating = true;

        while (continueCalculating) {
            double num1 = 0;
            double num2 = 0;
            char operator = ' ';
            double result = 0;

            System.out.println("\n--- Simple Calculator ---");
            
            // Input first number
            System.out.print("Enter first number: ");
            if (input.hasNextDouble()) {
                num1 = input.nextDouble();
            } else {
                System.out.println("Error: Invalid number input. Please restart.");
                input.close();
                return;
            }

            // Input and Validate Operator
            boolean validOperator = false;
            while (!validOperator) {
                System.out.print("Enter an operator (+, -, *, /) or 'q' to quit: ");
                String opInput = input.next().toLowerCase();

                if (opInput.length() > 0) {
                    operator = opInput.charAt(0);
                } else {
                    continue; // Loop again if input is empty
                }

                if (operator == 'q') {
                    continueCalculating = false;
                    break;
                } else if (operator == '+' || operator == '-' || operator == '*' || operator == '/') {
                    validOperator = true;
                } else {
                    System.out.println("Error: Invalid operator. Try again.");
                }
            }
            
            if (!continueCalculating) {
                break; // Exit the main loop if 'q' was entered
            }

            // Input second number
            System.out.print("Enter second number: ");
            if (input.hasNextDouble()) {
                num2 = input.nextDouble();
            } else {
                System.out.println("Error: Invalid number input. Please restart.");
                input.close();
                return;
            }

            // Perform Calculation
            switch (operator) {
                case '+':
                    result = num1 + num2;
                    break;
                case '-':
                    result = num1 - num2;
                    break;
                case '*':
                    result = num1 * num2;
                    break;
                case '/':
                    if (num2 != 0) {
                        result = num1 / num2;
                    } else {
                        System.out.println("Error: Division by zero is not allowed.");
                        continue; // Skip the result printing and loop again
                    }
                    break;
            }

            // Output Result
            System.out.printf("Result: %.2f %c %.2f = %.2f\n", num1, operator, num2, result);
        }

        System.out.println("Calculator closed. Goodbye!");
        input.close();
    }
}